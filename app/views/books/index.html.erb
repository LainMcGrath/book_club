<h2>All Books</h2>


<% @books.each do |book| %>
  <section id="book-<%= book.id %>">
    <h3>Book Title: </h3><p><%= book.title %></p>
    <% book.authors.each do |author| %>
      <h3>Author: </h3><p><%= link_to "#{author.name}", "/authors/#{author.id}" %></p>
    <% end %>
    <h3>Book Publication Year: </h3><p><%= book.publication_year %></p>
    <h3>Number of pages: </h3><p><%= book.pages %></p>
  </section>
  <br>
<% end %>
